<section>
  <div class="container mt-5">
    <a href="/admin/add-product" class="btn btn-success m-2">Add Product</a>
    <div class="row">

      <table class="table mt-5" id="products">
        <thead>
          <tr>
            <th scope="col">No</th>
            <th scope="col">Title</th>
            <th scope="col">Category</th>
            <th scope="col">Description</th>
            <th scope="col">Price</th>
            <th scope="col">Image</th>
            <th scope="col">Options</th>
          </tr>
        </thead>
        <tbody>
          {{#each products}}
            <tr>
              <th scope="row">{{this.number}}</th>
              <td>{{this.name}}</td>
              <td>{{this.category}}</td>
              <td>{{this.description}}</td>
              <td>Rs:{{this.price}}</td>
              <td><img
                  src="/product-images/{{this._id}}.jpg"
                  style="width: 50px;height: 50px ;"
                  alt=""
                  srcset=""
                /></td>
              <td><a
                  class="btn btn-primary m-2"
                  href="/admin/edit-product?id={{this._id}}"
                >Edit</a>
              <a
                  class="btn btn-danger"
                  href="/admin/delete-product?id={{this._id}}"
                  onclick="return confirm('Are you want to delete {{this.name}} ?')"
                >Delete</a></td>
            </tr>
          {{/each}}

        </tbody>
      </table>
    </div>
  </div>
</section>

<script>
  $(document).ready( function () { $('#products').DataTable(); } );
</script>