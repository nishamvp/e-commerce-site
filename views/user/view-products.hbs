<section>
  {{! cards }}
  <div class="container mt-5">
    <div class="row">
      {{#each products}}
        <div class="col-md-3 p-auto m-auto">
          <div class="card">
            <img
              src="/product-images/{{this._id}}.jpg"
              class="card-img-top"
              alt="..."
              style="height:15rem ;"
            />
            <div class="card-body">
              <h5 class="card-title">{{this.name}}</h5>
              <h6 class="card-text">Rs:{{this.price}}</h6>
              <p class="card-text">{{this.description}}</p>
              <button onclick="addToCart('{{this._id}}')" class="btn btn-primary">Add to cart</button>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</section>

